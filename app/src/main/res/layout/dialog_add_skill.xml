<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dialog_skill_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Ajouter une compétence"
            android:textAlignment="center"
            android:textColor="@color/secondaryDarkColor"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/dialog_job1_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_skill_job1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métier : "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dialog_skill_job1_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="aucun"
                android:textColor="@color/secondaryDarkColor"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_job2_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_skill_job2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métier : "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dialog_skill_job2_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="aucun"
                android:textColor="@color/secondaryDarkColor"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_job3_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_skill_job3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métier : "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dialog_skill_job3_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="aucun"
                android:textColor="@color/secondaryDarkColor"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/dialog_skill_searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_text_container"
            android:queryHint="entrer un métier" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_dialog_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_dialog_skill_add_another"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="ajouter une compétence supplémentaire"
            android:textColor="@color/primaryTextColor" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>